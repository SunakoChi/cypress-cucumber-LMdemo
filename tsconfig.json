{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["dist", "node_modules", "cypress"],
}

